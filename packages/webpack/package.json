{
  "name": "@markshawn/code-inspector-webpack",
  "version": "1.2.10-enhanced.1",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.mjs",
  "typings": "./types/index.d.ts",
  "scripts": {
    "build:plugin": "vite build",
    "build:loader": "vite build --config vite.loader.config.ts",
    "build:inject": "vite build --config vite.inject-loader.config.ts",
    "clear": "rimraf ./dist && rimraf ./types",
    "build": "pnpm clear && tsc && pnpm build:plugin && pnpm build:loader && pnpm build:inject",
    "pub": "pnpm publish",
    "pub:beta": "pnpm publish --tag beta"
  },
  "files": [
    "dist",
    "types"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./types/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./types/index.d.ts",
        "default": "./dist/index.umd.js"
      }
    },
    "./dist/loader.js": "./dist/loader.js",
    "./dist/inject-loader.js": "./dist/inject-loader.js"
  },
  "repository": "git@github.com:MarkShawn2020/code-inspector.git",
  "author": "MarkShawn2020 (enhanced), zh-lx <18366276315@163.com> (original)",
  "license": "MIT",
  "homepage": "https://github.com/MarkShawn2020/code-inspector",
  "description": "Enhanced code-inspector webpack plugin with mode switching: Click DOM to open IDE or copy path. Press Shift+Alt+C to toggle modes.",
  "keywords": [
    "webpack",
    "vite",
    "plugin",
    "vue",
    "vscode",
    "inspector",
    "inspect",
    "enhanced",
    "mode-switching",
    "copy-path"
  ],
  "bugs": {
    "url": "https://github.com/MarkShawn2020/code-inspector/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "dependencies": {
    "@markshawn/code-inspector-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.3.3",
    "typescript": "^4.9.3",
    "vite": "^4.3.9"
  }
}